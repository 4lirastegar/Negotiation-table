# Copy this file to .env and fill in your API keys
# cp env.template .env

# OpenAI API Key (if using OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (if using Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Default LLM Provider (openai or anthropic)
LLM_PROVIDER=openai

# Default Model
LLM_MODEL=gpt-4-turbo
# For Anthropic: claude-3-opus-20240229
# For OpenAI: gpt-4-turbo (recommended), gpt-4, gpt-4o-mini, gpt-3.5-turbo

# MongoDB Settings
DB_NAME=your_database_name
DB_USER=your_username
DB_PASS=your_password
DB_HOST=cluster0.qzvn3.mongodb.net
# Or provide full connection string:
# DB_CONNECTION_STRING=mongodb+srv://username:password@cluster0.qzvn3.mongodb.net/database?retryWrites=true&w=majority&appName=Cluster0
